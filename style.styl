$black = rgb( 16,16,16 )
$white = rgb( 235,235,235 )

*
    padding 0
    margin 0
    color $white
    font-family Raleway

head, body
    width 100%
    height 100%

    background-image url('./assets/backgrounds/parking.jpg')
    background-size cover
    background-position bottom
    background-attachment fixed

    background-color $black

    body > *
        width 100%

#nav
    background-color alpha($white, 0.8)
    height 80px

.nav-button
    display inline-block
    width 160px
    height 80px
    color white
    text-align center
    line-height 80px
    letter-spacing 3px
    font-weight bolder

    transition-duration 0.2s
    -webkit-transition-duration 0.2s

    &#home
        background rgb(245,165,165)

main
    background-color rgba( 15,15,15, 0.6 )
    height 800px
    width 100%