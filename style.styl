$black = rgb( 46,46,46 )
$white = rgb( 235,235,235 )
$dur = 0.2s

*
    padding 0
    margin 0
    color $white
    font-family Raleway

html, body
    width 100%
    height 100%

    background-image url('./assets/backgrounds/parking.jpg')
    background-size cover
    background-position bottom
    background-attachment fixed

    background-color $black

    #main
        width calc(100% - 100px)
        display block
        padding 50px
        height calc(100% - 180px)
        overflow auto

#nav
    background-color alpha($white, 0.8)
    height 80px
    width 100%

.nav-button
    display inline-block
    width 160px
    height 80px
    color white
    text-align center
    line-height 80px
    letter-spacing 3px
    font-weight bolder
    float left
    cursor pointer

    opacity 0.8

    transition-duration $dur
    -webkit-transition-duration $dur

    &:hover
        opacity 1

    &#home
        background rgb(245,165,165)
    &#login
        float right
        background rgb(105,145,185)
    &#browse
        background rgb(200,100,200)

main
    background-color rgba( 15,15,15, 0.6 )
    height 800px
    width 100%

.form
    background-color alpha($white, 0.8)
    text-align center
    padding 50px
    box-sizing border-box
    float left
    width 100%

    input 
        display inline-block
        outline none 
        border none
        margin 10px
        padding 10px
        font-size 1.5rem
        color $black
        letter-spacing 1px
        background $white
        box-sizing border-box

    h3
        color $black
        letter-spacing 1px
        text-transform uppercase
        font-weight 600
        display inline-block
        text-align left
    h3, input 
        width 50%

    h1
        color $black
        margin-bottom 50px
        padding-bottom 25px
        font-weight 100
        font-size 3rem
        border-bottom 2px solid $black
    button
        color $white
        background-color $black
        border none 
        outline none
        font-size 1.5rem
        padding 15px
        width 25%
        letter-spacing 2px
        cursor pointer
        transition-duration $dur
        -webkit-transition-duration $dur

        &:hover
            color $black
            background-color $white

    #accept-terms
        display inline-block
        width auto

    h4
        color $black
        display inline-block
        padding 10px
        border-bottom 2px solid $black
        letter-spacing 1px

        a
            color #426661
            text-decoration none
            border-bottom 2px solid #426661
            &:hover
                color $white
                border-bottom 2px solid $white
        